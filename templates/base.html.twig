    {% block javascripts %}{% endblock %}
    
    <script>
        class ShoppingCart {
            constructor() {
                this.items = JSON.parse(localStorage.getItem('sitefilm_cart')) || [];
                this.updateCartDisplay();
            }
            
            addItem(item) {
                const existingItem = this.items.find(i => i.id === item.id);
                
                if (existingItem) {
                    existingItem.quantity += 1;
                } else {
                    this.items.push({
                        ...item,
                        quantity: 1,
                        addedAt: new Date().toISOString()
                    });
                }
                
                this.save();
                this.updateCartDisplay();
                this.showNotification(`${item.title} ajouté au panier - ${item.price.toFixed(2)}€`);
                
                return this.items;
            }
            
            removeItem(itemId) {
                this.items = this.items.filter(item => item.id !== itemId);
                this.save();
                this.updateCartDisplay();
                return this.items;
            }
            
            updateQuantity(itemId, quantity) {
                const item = this.items.find(i => i.id === itemId);
                if (item) {
                    if (quantity <= 0) {
                        return this.removeItem(itemId);
                    }
                    item.quantity = quantity;
                    this.save();
                    this.updateCartDisplay();
                }
                return this.items;
            }
            
            clear() {
                this.items = [];
                this.save();
                this.updateCartDisplay();
            }
            
            getTotal() {
                return this.items.reduce((total, item) => total + (item.price * item.quantity), 0);
            }
            
            getItemCount() {
                return this.items.reduce((count, item) => count + item.quantity, 0);
            }
            
            updateCartDisplay() {
                const itemCount = this.getItemCount();
                const countElements = document.querySelectorAll('.cart-count');
                
                countElements.forEach(element => {
                    element.textContent = itemCount;
                    element.style.display = itemCount > 0 ? 'block' : 'none';
                });
                
                const cartBtn = document.querySelector('.cart-btn');
                if (cartBtn) {
                    if (itemCount > 0) {
                        cartBtn.classList.add('has-items');
                    } else {
                        cartBtn.classList.remove('has-items');
                    }
                }
            }
            
            showNotification(message) {
                const notification = document.getElementById('cartNotification');
                const notificationText = document.getElementById('notificationText');
                
                if (notification && notificationText) {
                    notificationText.textContent = message;
                    notification.style.display = 'flex';
                    notification.style.alignItems = 'center';
                    
                    notification.style.animation = 'slideIn 0.3s ease';
                    
                    setTimeout(() => {
                        notification.style.animation = 'slideOut 0.3s ease';
                        setTimeout(() => {
                            notification.style.display = 'none';
                        }, 300);
                    }, 3000);
                }
            }
            
            save() {
                localStorage.setItem('sitefilm_cart', JSON.stringify(this.items));
            }
        }
        
        const cart = new ShoppingCart();
        
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.add-to-cart').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const movieData = {
                        id: this.dataset.movieId,
                        title: this.dataset.movie,
                        price: parseFloat(this.dataset.price),
                        image: this.closest('.movie-card')?.querySelector('img')?.src || ''
                    };
                    
                    cart.addItem(movieData);
                    
                    const originalHTML = this.innerHTML;
                    const originalClass = this.className;
                    
                    this.innerHTML = '<i class="fas fa-check me-1"></i>Ajouté';
                    this.className = originalClass.replace('btn-primary', 'btn-success');
                    this.disabled = true;
                    
                    setTimeout(() => {
                        this.innerHTML = originalHTML;
                        this.className = originalClass;
                        this.disabled = false;
                    }, 2000);
                });
            });
            
            document.querySelectorAll('.cart-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    if (cart.getItemCount() > 0) {
                        window.location.href = '/panier';
                    } else {
                        cart.showNotification('Votre panier est vide');
                    }
                });
            });
            
            const searchForm = document.querySelector('form.d-flex');
            if (searchForm) {
                searchForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const searchInput = this.querySelector('input[type="search"]');
                    if (searchInput.value.trim()) {
                        console.log('Recherche:', searchInput.value);
                    }
                });
            }
            
            const movieCards = document.querySelectorAll('.movie-card');
            movieCards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
                card.classList.add('animate__animated', 'animate__fadeInUp');
            });
            
            // Animation du bouton panier au clic
            document.querySelector('.cart-btn').addEventListener('click', function(e) {
                this.style.transform = 'scale(1.1)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 300);
            });
        });
        
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideOut {
                from {
                    transform: translateX(0);
                    opacity: 1;
                }
                to {
                    transform: translateX(100%);
                    opacity: 0;
                }
            }
            
            .cart-btn.has-items {
                border-color: var(--primary-color);
                background: rgba(102, 126, 234, 0.1);
            }
            
            .animate__animated {
                animation-duration: 0.6s;
            }
            
            .dropdown-menu {
                background-color: rgba(30, 30, 30, 0.98);
                border: 1px solid rgba(255, 255, 255, 0.1);
                backdrop-filter: blur(10px);
            }
            
            .dropdown-item {
                color: rgba(255, 255, 255, 0.8);
                transition: all 0.2s ease;
            }
            
            .dropdown-item:hover {
                background-color: rgba(102, 126, 234, 0.1);
                color: white;
            }
            
            .dropdown-item.text-danger:hover {
                background-color: rgba(229, 62, 62, 0.1);
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>