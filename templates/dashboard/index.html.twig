{# templates/dashboard/index.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StreamFlix - Movie Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@heroicons/vue@1.0.6/index.js"></script>
</head>
<body class="bg-gray-900 text-white">
    <!-- Navigation -->
    <nav class="bg-gray-800 border-b border-gray-700 fixed w-full z-50">
        <div class="container mx-auto px-4 py-3">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="flex items-center space-x-2">
                    <div class="w-8 h-8 bg-red-600 rounded"></div>
                    <span class="text-2xl font-bold text-red-600">StreamFlix</span>
                </div>

                <!-- Navigation Links -->
                <div class="hidden md:flex space-x-6">
                    <a href="#" class="hover:text-red-500 transition">Home</a>
                    <a href="#" class="hover:text-red-500 transition">Movies</a>
                    <a href="#" class="hover:text-red-500 transition">Series</a>
                    <a href="#" class="hover:text-red-500 transition">New & Popular</a>
                    <a href="#" class="hover:text-red-500 transition">My List</a>
                </div>

                <!-- User Menu -->
                <div class="flex items-center space-x-4">
                    <button class="hover:text-red-500 transition">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </button>
                    <div class="w-8 h-8 bg-gray-600 rounded-full"></div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-20">
        <!-- Hero Section -->
        <section class="relative h-[70vh] overflow-hidden">
            <div class="absolute inset-0">
                <img src="https://images.unsplash.com/photo-1534447677768-be436bb09401?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80" 
                     alt="Featured Movie" 
                     class="w-full h-full object-cover opacity-50">
                <div class="absolute inset-0 bg-gradient-to-r from-gray-900 via-gray-900/70 to-transparent"></div>
            </div>
            
            <div class="relative container mx-auto px-4 h-full flex items-center">
                <div class="max-w-2xl">
                    <h1 class="text-5xl font-bold mb-4">DUNE: PART TWO</h1>
                    <div class="flex items-center space-x-4 mb-6">
                        <span class="text-green-500 font-semibold">98% Match</span>
                        <span>2024</span>
                        <span>2h 46m</span>
                        <span class="border border-gray-400 px-2 py-1 text-xs">HD</span>
                    </div>
                    <p class="text-lg text-gray-300 mb-8">
                        Paul Atreides unites with Chani and the Fremen while seeking revenge against the conspirators who destroyed his family.
                    </p>
                    <div class="flex space-x-4">
                        <button class="bg-white text-gray-900 px-8 py-3 rounded-lg font-semibold hover:bg-gray-200 transition flex items-center space-x-2">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M8 5v14l11-7z" />
                            </svg>
                            <span>Play</span>
                        </button>
                        <button class="bg-gray-700/70 text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-600 transition flex items-center space-x-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span>More Info</span>
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <!-- Movie Sections -->
        <div class="container mx-auto px-4 py-8">
            <!-- Continue Watching -->
            <section class="mb-12">
                <h2 class="text-2xl font-bold mb-6">Continue Watching</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    {% for movie in featuredContent.continueWatching %}
                    <div class="group relative bg-gray-800 rounded-lg overflow-hidden hover:scale-[1.02] transition-transform duration-300">
                        <div class="relative h-64 overflow-hidden">
                            <img src="{{ movie.image }}" alt="{{ movie.title }}" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
                            <div class="absolute top-3 right-3 bg-gray-900/80 px-2 py-1 rounded text-sm">
                                {{ movie.duration }}
                            </div>
                            <div class="absolute bottom-3 left-3">
                                <div class="flex items-center space-x-1">
                                    <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                    </svg>
                                    <span>{{ movie.rating }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="p-4">
                            <h3 class="font-semibold text-lg mb-2">{{ movie.title }}</h3>
                            <div class="flex flex-wrap gap-2">
                                {% for genre in movie.genre %}
                                <span class="text-xs bg-gray-700 px-2 py-1 rounded">{{ genre }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </section>

            <!-- Trending Now -->
            <section class="mb-12">
                <h2 class="text-2xl font-bold mb-6">Trending Now</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    {% for movie in featuredContent.trending %}
                    <div class="group relative bg-gray-800 rounded-lg overflow-hidden hover:scale-[1.02] transition-transform duration-300">
                        <div class="relative h-64 overflow-hidden">
                            <img src="{{ movie.image }}" alt="{{ movie.title }}" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
                            <div class="absolute top-3 right-3 bg-red-600 px-2 py-1 rounded text-sm font-bold">
                                #{{ loop.index }}
                            </div>
                        </div>
                        <div class="p-4">
                            <h3 class="font-semibold text-lg mb-2">{{ movie.title }}</h3>
                            <p class="text-gray-400 text-sm mb-3">{{ movie.year }} â€¢ {{ movie.duration }}</p>
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-1">
                                    <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                    </svg>
                                    <span>{{ movie.rating }}</span>
                                </div>
                                <button class="text-red-500 hover:text-red-400 transition">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </section>

            <!-- Browse by Genre -->
            <section class="mb-12">
                <h2 class="text-2xl font-bold mb-6">Browse by Genre</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
                    {% for genre in genres %}
                    <div class="relative h-32 overflow-hidden rounded-lg group cursor-pointer">
                        <div class="absolute inset-0 bg-gradient-to-br from-purple-600 to-red-600 opacity-80 group-hover:opacity-100 transition-opacity"></div>
                        <div class="relative h-full flex items-center justify-center">
                            <span class="text-lg font-bold text-white">{{ genre }}</span>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 border-t border-gray-700 py-8">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="mb-4 md:mb-0">
                    <div class="flex items-center space-x-2">
                        <div class="w-8 h-8 bg-red-600 rounded"></div>
                        <span class="text-2xl font-bold text-red-600">StreamFlix</span>
                    </div>
                </div>
                <div class="text-gray-400 text-sm">
                    <p>&copy; 2024 StreamFlix. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>