{% extends 'base.html.twig' %}

{% block title %}Mes Favoris - SiteFilm{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_profile') }}">Profil</a></li>
                    <li class="breadcrumb-item active">Favoris</li>
                </ol>
            </nav>
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-heart me-2"></i>Mes Favoris</h1>
                <span class="badge bg-primary fs-6">{{ favoris|length }} film(s)</span>
            </div>
        </div>
    </div>
    
    {% if favoris|length > 0 %}
        <div class="row">
            {% for film in favoris %}
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card h-100">
                        <img src="https://via.placeholder.com/300x450/667eea/ffffff?text=Film+{{ loop.index }}" 
                             class="card-img-top" alt="{{ film.titre }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ film.titre }}</h5>
                            <p class="card-text text-muted small">{{ film.annee }} • {{ film.duree }}min</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-secondary">{{ film.categorie }}</span>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-heart-broken"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-play"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-heart-broken fa-4x text-muted"></i>
                        </div>
                        <h4 class="mb-3">Votre liste de favoris est vide</h4>
                        <p class="text-muted mb-4">
                            Ajoutez vos films préférés à vos favoris pour les retrouver facilement et recevoir des notifications quand de nouveaux épisodes sont disponibles.
                        </p>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                                <i class="fas fa-film me-2"></i>Découvrir des films
                            </a>
                            <a href="#" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-search me-2"></i>Rechercher
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}