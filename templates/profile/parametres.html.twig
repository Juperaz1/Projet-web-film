{% extends 'base.html.twig' %}

{% block title %}Paramètres - SiteFilm{% endblock %}

{% block body %}
<style>
  
    .page-params .container {
        background-color: transparent ;
    }
    
    .page-params .card {
        background-color: rgba(20, 20, 20, 0.9) ;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.9) ;
    }
    
    .page-params .card-body,
    .page-params .card-header {
        color: rgba(255, 255, 255, 0.9) ;
    }
    
    .page-params .card-header {
        background-color: rgba(0, 0, 0, 0.3) ;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .page-params .text-muted {
        color: rgba(255, 255, 255, 0.7) ;
    }
    
    .page-params h1,
    .page-params h2,
    .page-params h3,
    .page-params h4,
    .page-params h5,
    .page-params h6,
    .page-params p,
    .page-params span,
    .page-params div,
    .page-params label {
        color: rgba(255, 255, 255, 0.9) ;
    }
    
    .page-params .list-group-item {
        background-color: transparent ;
        color: rgba(255, 255, 255, 0.8) ;
        border-color: rgba(255, 255, 255, 0.1) ;
    }
    
    .page-params .list-group-item.active {
        background-color: var(--primary-color) ;
        border-color: var(--primary-color) ;
        color: white ;
    }
    
    .page-params .list-group-item:hover:not(.active) {
        background-color: rgba(255, 255, 255, 0.05) ;
        color: white ;
    }
    
    .page-params .form-control {
        background-color: rgba(30, 30, 30, 0.9) ;
        color: white ;
        border-color: rgba(255, 255, 255, 0.2) ;
    }
    
    .page-params .form-control:read-only {
        background-color: rgba(40, 40, 40, 0.9) ;
    }
    
    .page-params .form-label {
        color: rgba(255, 255, 255, 0.9) ;
    }
    
    .page-params .form-check-label {
        color: rgba(255, 255, 255, 0.9) ;
    }
    
    .page-params .alert-info {
        background-color: rgba(56, 178, 172, 0.2) ;
        border-color: rgba(56, 178, 172, 0.3) ;
        color: #81e6d9 ;
    }
    
    .page-params .alert-info i {
        color: #81e6d9 ;
    }
    
    .page-params body {
        background-color: var(--dark-color) ;
    }
    
    .page-params hr {
        border-color: rgba(255, 255, 255, 0.1) ;
    }
    
    .page-params .btn-outline-primary,
    .page-params .btn-outline-danger {
        color: var(--primary-color) ;
        border-color: var(--primary-color);
    }
    
    .page-params .btn-outline-danger {
        color: var(--accent-color) ;
        border-color: var(--accent-color);
    }
    
    .page-params .btn-outline-primary:hover,
    .page-params .btn-outline-danger:hover {
        color: white ;
    }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="mb-4">Paramètres</h5>
                    <div class="list-group list-group-flush">
                        <a href="{{ path('app_profile') }}" class="list-group-item list-group-item-action border-0">
                            <i class="fas fa-user me-2"></i>Profil
                        </a>
                        <a href="{{ path('app_favoris') }}" class="list-group-item list-group-item-action border-0">
                            <i class="fas fa-heart me-2"></i>Favoris
                        </a>
                        <a href="{{ path('app_parametres') }}" class="list-group-item list-group-item-action border-0 active">
                            <i class="fas fa-cog me-2"></i>Paramètres
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-9">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-cog me-2"></i>Paramètres du compte</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="mb-3">Informations personnelles</h5>
                            <div class="mb-3">
                                <label class="form-label">Nom</label>
                                <input type="text" class="form-control" value="{{ user.nom }}" readonly>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" value="{{ user.email }}" readonly>
                            </div>
                            <button class="btn btn-outline-primary" disabled>
                                <i class="fas fa-edit me-2"></i>Modifier (bientôt disponible)
                            </button>
                        </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <h5 class="mb-3">Sécurité</h5>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Pour des raisons de sécurité, certaines fonctionnalités ne sont pas encore disponibles.
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-primary" disabled>
                            <i class="fas fa-key me-2"></i>Changer le mot de passe
                        </button>
                        <button class="btn btn-outline-danger" disabled>
                            <i class="fas fa-trash-alt me-2"></i>Supprimer le compte
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.body.classList.add('page-params');
    });
</script>
{% endblock %}