{% extends 'base.html.twig' %}

{% block title %}Paramètres - SiteFilm{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="mb-4">Paramètres</h5>
                    <div class="list-group list-group-flush">
                        <a href="{{ path('app_profile') }}" class="list-group-item list-group-item-action border-0">
                            <i class="fas fa-user me-2"></i>Profil
                        </a>
                        <a href="{{ path('app_favoris') }}" class="list-group-item list-group-item-action border-0">
                            <i class="fas fa-heart me-2"></i>Favoris
                        </a>
                        <a href="{{ path('app_parametres') }}" class="list-group-item list-group-item-action border-0 active">
                            <i class="fas fa-cog me-2"></i>Paramètres
                        </a>
                        <a href="#" class="list-group-item list-group-item-action border-0">
                            <i class="fas fa-bell me-2"></i>Notifications
                        </a>
                        <a href="#" class="list-group-item list-group-item-action border-0">
                            <i class="fas fa-lock me-2"></i>Sécurité
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-9">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-cog me-2"></i>Paramètres du compte</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="mb-3">Informations personnelles</h5>
                            <div class="mb-3">
                                <label class="form-label">Nom</label>
                                <input type="text" class="form-control" value="{{ user.nom }}" readonly>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" value="{{ user.email }}" readonly>
                            </div>
                            <button class="btn btn-outline-primary" disabled>
                                <i class="fas fa-edit me-2"></i>Modifier (bientôt disponible)
                            </button>
                        </div>
                        <div class="col-md-6">
                            <h5 class="mb-3">Préférences</h5>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="notifications" disabled>
                                <label class="form-check-label" for="notifications">
                                    Recevoir les notifications par email
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="newsletter" disabled>
                                <label class="form-check-label" for="newsletter">
                                    S'abonner à la newsletter
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="darkMode" checked disabled>
                                <label class="form-check-label" for="darkMode">
                                    Mode sombre activé
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <h5 class="mb-3">Sécurité</h5>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Pour des raisons de sécurité, certaines fonctionnalités ne sont pas encore disponibles.
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-primary" disabled>
                            <i class="fas fa-key me-2"></i>Changer le mot de passe
                        </button>
                        <button class="btn btn-outline-danger" disabled>
                            <i class="fas fa-trash-alt me-2"></i>Supprimer le compte
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}