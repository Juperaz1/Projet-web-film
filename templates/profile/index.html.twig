{% extends 'base.html.twig' %}

{% block title %}Mon Profil - SiteFilm{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center" style="width: 120px; height: 120px;">
                            <span class="display-4 text-white">{{ user.nom|first|upper }}</span>
                        </div>
                    </div>
                    <h4>{{ user.nom }}</h4>
                    <p class="text-muted mb-3">{{ user.email }}</p>
                    <p class="mb-4">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Membre depuis {{ user.dateInscription|date('d/m/Y') }}
                    </p>
                    
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_parametres') }}" class="btn btn-outline-primary">
                            <i class="fas fa-cog me-2"></i>Paramètres
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statistiques</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="border rounded p-3">
                                <h3 class="mb-1">0</h3>
                                <small class="text-muted">Films visionnés</small>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="border rounded p-3">
                                <h3 class="mb-1">0</h3>
                                <small class="text-muted">Favoris</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-history me-2"></i>Activité récente</h4>
                </div>
                <div class="card-body">
                    <div class="text-center py-5">
                        <i class="fas fa-film fa-3x text-muted mb-3"></i>
                        <h5>Aucune activité récente</h5>
                        <p class="text-muted">Commencez à regarder des films pour voir votre activité ici.</p>
                        <a href="{{ path('app_home') }}" class="btn btn-primary">
                            <i class="fas fa-play-circle me-2"></i>Découvrir des films
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-heart me-2"></i>Mes Favoris</h4>
                    <a href="{{ path('app_favoris') }}" class="btn btn-sm btn-outline-primary">
                        Voir tous <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="fas fa-heart-broken fa-2x text-muted mb-3"></i>
                        <p class="text-muted mb-0">Vous n'avez pas encore de films favoris</p>
                        <a href="{{ path('app_favoris') }}" class="btn btn-sm btn-primary mt-3">
                            <i class="fas fa-plus me-1"></i>Ajouter des favoris
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}