{% extends 'base.html.twig' %}

{% block title %}Mes Locations - SiteFilm{% endblock %}

{% block body %}
<div class="locations-page">
    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1><i class="fas fa-history me-2"></i>Mes Locations</h1>
                    <a href="{{ path('app_profile') }}" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Retour au profil
                    </a>
                </div>

                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Historique complet ({{ locations|length }} location(s))</h4>
                        <div>
                            <span class="badge bg-success fs-6">
                                Total dépensé : {{ totalDepense|number_format(2, ',', ' ') }} €
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if locations is empty %}
                            <div class="text-center py-5">
                                <i class="fas fa-film fa-3x text-muted mb-3"></i>
                                <h3>Aucune location</h3>
                                <p class="text-muted mb-4">Vous n'avez pas encore loué de film.</p>
                                <a href="{{ path('app_movies') }}" class="btn btn-primary btn-lg">
                                    <i class="fas fa-play-circle me-2"></i>Découvrir des films
                                </a>
                            </div>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th width="40%">Film</th>
                                            <th>Date de location</th>
                                            <th>Prix</th>
                                            <th>Statut</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for location in locations %}
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        {% if location.film and location.film.cheminAffiche %}
                                                            <img src="{{ location.film.fullAfficheUrl }}" alt="{{ location.film.titre }}" class="rounded me-3" style="width: 80px; height: 100px; object-fit: cover;">
                                                        {% else %}
                                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center me-3" style="width: 80px; height: 100px;">
                                                                <i class="fas fa-film fa-2x text-white"></i>
                                                            </div>
                                                        {% endif %}
                                                        <div>
                                                            <h6 class="mb-0">{{ location.film.titre }}</h6>
                                                            <small class="text-muted">{{ location.film.annee }} • {{ location.film.formattedDuration }}</small>
                                                            <br>
                                                            <small class="text-muted">{{ location.film.genresAsString }}</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    {{ location.dateLocation|date('d/m/Y à H:i') }}
                                                    <br>
                                                    <small class="text-muted">
                                                        {% set diff = date().diff(location.dateLocation) %}
                                                        Il y a 
                                                        {% if diff.y > 0 %}
                                                            {{ diff.y }} an{{ diff.y > 1 ? 's' : '' }}
                                                        {% elseif diff.m > 0 %}
                                                            {{ diff.m }} mois
                                                        {% elseif diff.d > 0 %}
                                                            {{ diff.d }} jour{{ diff.d > 1 ? 's' : '' }}
                                                        {% elseif diff.h > 0 %}
                                                            {{ diff.h }} heure{{ diff.h > 1 ? 's' : '' }}
                                                        {% elseif diff.i > 0 %}
                                                            {{ diff.i }} minute{{ diff.i > 1 ? 's' : '' }}
                                                        {% else %}
                                                            quelques secondes
                                                        {% endif %}
                                                    </small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-success fs-6">{{ location.prixFinal|number_format(2, ',', ' ') }} €</span>
                                                </td>
                                                <td>
                                                    {% set daysDiff = date().diff(location.dateLocation).days %}
                                                    {% if daysDiff <= 1 %}
                                                        <span class="badge bg-info">Récente</span>
                                                    {% elseif daysDiff <= 7 %}
                                                        <span class="badge bg-primary">Cette semaine</span>
                                                    {% elseif daysDiff <= 30 %}
                                                        <span class="badge bg-secondary">Ce mois-ci</span>
                                                    {% else %}
                                                        <span class="badge bg-dark">Ancienne</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if location.film %}
                                                        <div class="btn-group" role="group">
                                                            <a href="#" class="btn btn-sm btn-outline-primary" title="Voir films">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                        </div>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>8
</div>
{% endblock %}