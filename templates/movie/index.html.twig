{# templates/movie/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ title }} - SiteFilm{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Header de la bibliothèque */
        .library-header {
            background: linear-gradient(135deg, rgba(10, 10, 10, 0.95), rgba(26, 32, 44, 0.95));
            color: white;
            padding: 4rem 0;
            margin-bottom: 3rem;
            border-bottom: 1px solid rgba(102, 126, 234, 0.2);
        }
        
        .library-header h1 {
            font-size: 3rem;
            font-weight: 800;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        /* Filtres et recherche */
        .filters-section {
            background: rgba(26, 32, 44, 0.8);
            padding: 1.5rem;
            border-radius: 10px;
            margin-bottom: 2rem;
            border: 1px solid rgba(102, 126, 234, 0.2);
        }
        
        /* Carte de film */
        .film-card {
            background: rgba(20, 20, 20, 0.9);
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
            height: 100%;
        }
        
        .film-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(102, 126, 234, 0.2);
            border-color: rgba(102, 126, 234, 0.4);
        }
        
        .film-poster {
            width: 100%;
            height: 350px;
            object-fit: cover;
            background: #1a202c;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #667eea;
            font-size: 4rem;
        }
        
        .film-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            z-index: 2;
        }
        
        .film-content {
            padding: 1.5rem;
        }
        
        .film-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.5rem;
            line-height: 1.3;
        }
        
        .film-meta {
            color: #a0aec0;
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }
        
        .film-synopsis {
            color: #cbd5e0;
            font-size: 0.9rem;
            line-height: 1.5;
            margin-bottom: 1.5rem;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .film-rating {
            color: #f6ad55;
            font-weight: 600;
            margin-bottom: 1rem;
        }
        
        .film-price {
            font-size: 1.2rem;
            font-weight: 700;
            color: #48bb78;
        }
        
        /* Stats */
        .stats-card {
            background: linear-gradient(135deg, rgba(26, 32, 44, 0.9), rgba(10, 10, 10, 0.9));
            border: 1px solid rgba(102, 126, 234, 0.2);
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .library-header h1 {
                font-size: 2.2rem;
            }
            
            .film-poster {
                height: 250px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <section class="library-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1>{{ title }}</h1>
                    <p class="lead mb-4">Découvrez notre collection complète de {{ totalFilms }} films</p>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <section class="filters-section">
            <form method="get" class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" 
                               class="form-control" 
                               name="search" 
                               placeholder="Rechercher un film..." 
                               value="{{ searchTerm }}">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <select class="form-select" name="genre" onchange="this.form.submit()">
                        <option value="">Tous les genres</option>
                        {% for genre in genres %}
                        <option value="{{ genre }}" {{ selectedGenre == genre ? 'selected' : '' }}>
                            {{ genre }}
                        </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2">
                    {% if searchTerm or selectedGenre %}
                    <a href="{{ path('app_movies') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Réinitialiser
                    </a>
                    {% endif %}
                </div>
            </form>
        </section>

        <div class="row" id="moviesContainer">
            {% if films|length > 0 %}
                {% for film in films %}
                <div class="col-xl-3 col-lg-4 col-md-6 mb-4" data-genre="{{ film.genre }}">
                    <div class="film-card h-100">
                        {% if film.est_nouveau %}
                        <div class="film-badge">NOUVEAU</div>
                        {% endif %}
                        
                        <div class="film-poster">
                            {% if film.chemin_affiche starts with 'http' %}
                                <img src="{{ film.chemin_affiche }}" alt="{{ film.titre }}" class="img-fluid">
                            {% else %}
                                <i class="fas fa-film"></i>
                            {% endif %}
                        </div>
                        
                        <div class="film-content">
                            <h3 class="film-title">{{ film.titre }}</h3>
                            <div class="film-meta">
                                <span>{{ film.annee }}</span> • 
                                <span>{{ film.duree }}</span> • 
                                <span>{{ film.genre }}</span>
                            </div>
                            
                            <div class="film-rating">
                                {% for i in 1..5 %}
                                    {% if i <= film.rating %}
                                        <i class="fas fa-star"></i>
                                    {% else %}
                                        <i class="far fa-star"></i>
                                    {% endif %}
                                {% endfor %}
                                <span class="ms-1">{{ film.rating }}/5</span>
                            </div>
                            
                            <p class="film-synopsis">{{ film.synopsis }}</p>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="film-price">{{ film.prix_location_par_default }}€</div>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-sm btn-primary" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#filmModal{{ film.id }}">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                    <button class="btn btn-sm btn-success add-to-cart"
                                            data-film="{{ film.titre }}"
                                            data-price="{{ film.prix_location_par_default }}">
                                        <i class="fas fa-cart-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="modal fade" id="filmModal{{ film.id }}" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content bg-dark text-white">
                                <div class="modal-header border-secondary">
                                    <h5 class="modal-title">{{ film.titre }} ({{ film.annee }})</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="film-poster mb-3">
                                                {% if film.chemin_affiche starts with 'http' %}
                                                    <img src="{{ film.chemin_affiche }}" alt="{{ film.titre }}" class="img-fluid">
                                                {% else %}
                                                    <i class="fas fa-film fa-5x"></i>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <p><strong>Durée :</strong> {{ film.duree }}</p>
                                            <p><strong>Genre :</strong> {{ film.genre }}</p>
                                            <p><strong>Prix location :</strong> {{ film.prix_location_par_default }}€</p>
                                            <p><strong>Note :</strong> {{ film.rating }}/5</p>
                                            <hr class="bg-secondary">
                                            <p><strong>Synopsis :</strong></p>
                                            <p>{{ film.synopsis }}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer border-secondary">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                    <button class="btn btn-primary add-to-cart"
                                            data-film="{{ film.titre }}"
                                            data-price="{{ film.prix_location_par_default }}">
                                        <i class="fas fa-cart-plus me-2"></i>Ajouter au panier
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center py-5">
                        <i class="fas fa-film fa-3x mb-3" style="color: #667eea;"></i>
                        <h4>Aucun film trouvé</h4>
                        <p class="mb-0">
                            {% if searchTerm or selectedGenre %}
                                Aucun film ne correspond à vos critères de recherche.
                                <a href="{{ path('app_movies') }}" class="alert-link">Voir tous les films</a>
                            {% else %}
                                La base de données est vide ou n'est pas accessible.
                            {% endif %}
                        </p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function()
        {
            document.querySelectorAll('.add-to-cart').forEach(button =>
            {
                button.addEventListener('click', function()
                {
                    const filmTitle = this.getAttribute('data-film');
                    const filmPrice = this.getAttribute('data-price');
=                    const cartBadge = document.querySelector('.badge.bg-danger');
                    if(cartBadge)
                    {
                        let currentCount = parseInt(cartBadge.textContent) || 0;
                        cartBadge.textContent = currentCount + 1;
=                        cartBadge.style.transform = 'scale(1.5)';
                        setTimeout(() =>
                        {
                            cartBadge.style.transform = 'scale(1)';
                        }, 300);
                    }
                    
                    const notification = document.createElement('div');
                    notification.className = 'alert alert-success position-fixed';
                    notification.style.cssText = 'top: 20px; right: 20px; z-index: 1050;';
                    notification.innerHTML = `<i class="fas fa-check-circle me-2"></i>"${filmTitle}" ajouté au panier (${filmPrice}€)`;
                    document.body.appendChild(notification);
                    setTimeout(() =>
                    {
                        notification.remove();
                    }, 3000);
                    const originalHTML = this.innerHTML;
                    this.innerHTML = '<i class="fas fa-check"></i> Ajouté';
                    this.classList.remove('btn-success', 'btn-primary');
                    this.classList.add('btn-secondary');
                    setTimeout(() =>
                    {
                        this.innerHTML = originalHTML;
                        this.classList.remove('btn-secondary');
                        this.classList.add(this.getAttribute('class').includes('btn-outline') ? 'btn-outline-primary' : 'btn-success');
                    }, 2000);
                });
            });
        });
    </script>
{% endblock %}